<h1>Edit Profile</h1>

<%= form_for @user do |form| %>

  <div class="field">
    <%= form.label 'New Password' %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label 'New Password Confirmation' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>

<br/>
<p><%= link_to 'Back', :back %></p>
