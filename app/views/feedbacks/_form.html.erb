<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <% if flag == true %>
      <div class="field">
        Student Name:
        <%= user.name %>
      </div>
    <% end %>
  <div class="field">
    Your Current Team:
    <% user.team_names.each do |tm| %>
      <%= tm %>
    <% end %>   
  </div>

  <div class="field">
    Current System Time: 
    <%= @feedback.format_time(now) %>    
  </div> 

  <div class="field">
    <%= form.label :collaboration, "Collaboration and Engagement" %>
    <%= form.range_field :collaboration, in:1..5, step:1%>
  </div>

  <div class="field">
    <%= form.label :collab_comment, "Add any comments about team collaboration and engagement you feel are needed." %>
    <%= form.text_area :collab_comment, placeholder:"Add any comments about team collaboration and engagement you feel are needed." %>
  </div>

  <div class="field">
    <%= form.label :communication, "Communication" %>
    <%= form.range_field :communication, in:1..5, step:1%>
  </div>

  <div class="field">
    <%= form.label :communication_comment, "Add any comments about team communication you feel are needed."  %>
    <%= form.text_area :communication_comment %>
  </div>

  <div class="field">
    <%= form.label :team_support, "Team Support" %>
    <%= form.range_field :team_support, in:1..5, step:1%>
  </div>

  <div class="field">
    <%= form.label :team_support_comment, "Add any comments about team support you feel are needed."  %>
    <%= form.text_area :team_support_comment %>
  </div>

  <div class="field">
    <%= form.label :responsibility, "Responsibility" %>
    <%= form.range_field :responsibility, in:1..5, step:1%>
  </div>

  <div class="field">
    <%= form.label :responsibility_comment, "Add any comments about team responsibility you feel are needed."  %>
    <%= form.text_area :responsibility_comment %>
  </div>

  <div class="field">
    <%= form.label :work_quality, "Work Quality" %>
    <%= form.range_field :work_quality, in:1..5, step:1%>
  </div>

  <div class="field">
    <%= form.label :work_quality_comment, "Add any comments about team work quality you feel are needed."  %>
    <%= form.text_area :work_quality_comment %>
  </div>


  <div class="field">  
    <% choices = [["High", 0],["Low", 1],["None", 2]] %>
    <%# Urgent - Instructor needs to check up on team ASAP! %>
    <%# Low - Instructor needs to check up on the team when they have the chance this week. %>
    <%# None - Instructor can check up on team. %>
    <%= form.label :priority, "To what extent does your feedback need urgent attention? High - Your team health needs attention from the instructor ASAP. Low - You would like to discuss your team health with the instructor this week. None - Your team health is on the right track." %>
    <%= form.select :priority, choices%>
  </div>

  <div class="field">
    <%= form.label :comments, "Add any comments you feel are worth mentioning here. If you rate your team poorly or your team requires urgent attention, please explain below." %>
    <%= form.text_area :comments %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
